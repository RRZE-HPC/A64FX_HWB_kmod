#
BHOME	=$(PWD)
#
F90	= ifort
CC	= icc
#
#
COMP	= -openmp
FOMP	= -openmp
COPTS	=  -O3 -fno-inline -mmic
FOPTS	=  -O3 
FLONG	= -132
LINKF   = 
#
#
NOLINK= -c
#

all:	SCAN_C.exe

SCAN_F.exe: scan_f.o timing.o
	$(F90) $(FOMP) -o SCAN_F.exe $^ $(LINKF)

SCAN_C.exe: scan_c.o timing.o
	$(CC) $(COMP) $(COPTS) -o SCAN_C.exe $^ $(LINKF)

%.o:  %.c
	$(CC) $(COPTS) $(COMP) $(NOLINK) $<

%.o:  %.f90
	$(F90) $(FOPTS) $(FOMP) $(NOLINK) $<

clean:
	rm -f *.o *.exe

